<ui:FluentWindow x:Class="DevGearbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="DevGearbox - Your Offline Developer Swiss Army Knife" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="DevGearbox" />
        
        <!-- Header -->
        <Grid Grid.Row="1" Margin="20,15,20,10">
            <StackPanel>
                <TextBlock Text="🛠️ DevGearbox" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="Your personal offline Swiss Army knife for developers" 
                          FontSize="12" Opacity="0.8" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
        
        <!-- Main Content - TabControl with dynamic items -->
        <TabControl Grid.Row="2" Margin="10" Name="MainTabControl" 
                    SelectionChanged="MainTabControl_SelectionChanged"/>
        
        <!-- Footer -->
        <Border Grid.Row="3" Padding="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ui:SymbolIcon Symbol="ShieldCheckmark24" FontSize="14" Margin="0,0,8,0"/>
                <TextBlock Text="All operations are performed locally. No data leaves your machine." 
                          FontSize="11" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</ui:FluentWindow>

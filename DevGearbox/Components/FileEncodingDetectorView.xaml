<UserControl x:Class="DevGearbox.Components.FileEncodingDetectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <SolidColorBrush x:Key="DropBorderBrush" Color="#3E3E42"/>
        <SolidColorBrush x:Key="DropHoverBrush" Color="#0E639C"/>
        <SolidColorBrush x:Key="DropBackgroundBrush" Color="#252526"/>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="File Encoding Detector" Style="{StaticResource HeaderStyle}"/>
            <TextBlock Text="Analyze text file encodings with detailed information about BOM, confidence, and characteristics" 
                       FontSize="12" Opacity="0.7"/>
        </StackPanel>

        <!-- Status InfoBar -->
        <ui:InfoBar Grid.Row="1"
                    Name="StatusInfoBar"
                    Title="Drag a file below or choose one to begin"
                    Severity="Informational"
                    IsOpen="True"
                    IsClosable="False"
                    Margin="0,0,0,15"/>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <!-- Drop Zone Card -->
            <ui:Card Grid.Column="0" Padding="20" AllowDrop="True"
                     Drop="DropArea_Drop"
                     DragEnter="DropArea_DragEnter"
                     DragOver="DropArea_DragOver"
                     DragLeave="DropArea_DragLeave">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Select File" 
                               FontSize="14" FontWeight="SemiBold" 
                               Margin="0,0,0,15"/>

                    <Border Grid.Row="1" Name="DropBorder"
                            BorderBrush="{StaticResource DropBorderBrush}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Background="{StaticResource DropBackgroundBrush}"
                            Padding="20"
                            MinHeight="250">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📂" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Drop file here" 
                                       FontSize="16" FontWeight="SemiBold" 
                                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="or" 
                                       Opacity="0.6"
                                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <ui:Button Content="Browse Files"
                                       Width="150"
                                       Appearance="Primary"
                                       Click="BrowseFile_Click"
                                       Icon="{ui:SymbolIcon FolderOpen24}"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Row="2" Margin="0,15,0,0">
                        <TextBlock Text="Selected File" 
                                   FontSize="12" FontWeight="SemiBold" 
                                   Opacity="0.7" Margin="0,0,0,5"/>
                        <TextBlock Name="SelectedFileText"
                                   Text="No file selected"
                                   TextWrapping="Wrap"
                                   Opacity="0.6"
                                   FontSize="11"/>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- Results Card -->
            <ui:Card Grid.Column="2" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Detection Results" 
                                   FontSize="14" FontWeight="SemiBold" 
                                   VerticalAlignment="Center"/>
                        <ui:Button Name="CopyEncodingButton"
                                   Content="Copy Encoding"
                                   Click="CopyEncoding_Click"
                                   Icon="{ui:SymbolIcon Copy24}"
                                   FontSize="11"
                                   Padding="8,4"
                                   Margin="10,0,0,0"
                                   IsEnabled="False"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="ResultsPanel">
                            <!-- Encoding Result -->
                            <Border Background="#2D2D30" 
                                    BorderBrush="#3E3E42" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="15"
                                    Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Detected Encoding" 
                                               FontSize="11" 
                                               Opacity="0.7" 
                                               Margin="0,0,0,5"/>
                                    <TextBlock Name="DetectedEncodingText"
                                               Text="—"
                                               FontFamily="Consolas"
                                               FontSize="18"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- File Details -->
                            <TextBlock Text="File Information" 
                                       FontSize="12" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10"/>
                            
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="File Size:" 
                                           Opacity="0.7" 
                                           Margin="0,0,10,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           Name="FileSizeText"
                                           Text="—"
                                           FontFamily="Consolas"
                                           Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="BOM Present:" 
                                           Opacity="0.7" 
                                           Margin="0,0,10,8"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                           Name="BomStatusText"
                                           Text="—"
                                           FontFamily="Consolas"
                                           Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="Confidence:" 
                                           Opacity="0.7" 
                                           Margin="0,0,10,8"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                           Name="ConfidenceText"
                                           Text="—"
                                           FontFamily="Consolas"
                                           Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                           Text="Analysis:" 
                                           Opacity="0.7" 
                                           Margin="0,0,10,0"
                                           VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" 
                                           Name="AnalysisText"
                                           Text="—"
                                           TextWrapping="Wrap"
                                           FontSize="11"
                                           Opacity="0.9"/>
                            </Grid>

                            <!-- Technical Details -->
                            <Expander Header="Technical Details" 
                                      FontSize="12" 
                                      FontWeight="SemiBold"
                                      IsExpanded="False">
                                <Border Background="#2D2D30" 
                                        BorderBrush="#3E3E42" 
                                        BorderThickness="1" 
                                        CornerRadius="4" 
                                        Padding="10"
                                        Margin="0,5,0,0">
                                    <TextBlock Name="TechnicalDetailsText"
                                               Text="No file analyzed yet"
                                               TextWrapping="Wrap"
                                               FontFamily="Consolas"
                                               FontSize="10"
                                               Opacity="0.8"/>
                                </Border>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Info Card -->
                    <ui:Card Grid.Row="2" Padding="12" Margin="0,15,0,0">
                        <StackPanel>
                            <TextBlock FontSize="11" FontWeight="SemiBold" Margin="0,0,0,5">
                                💡 Detection Methods
                            </TextBlock>
                            <TextBlock FontSize="10" Opacity="0.7" TextWrapping="Wrap">
                                • BOM signatures (UTF-8, UTF-16, UTF-32)
                                <LineBreak/>
                                • Heuristic analysis (ASCII, UTF-8, Windows-1252)
                                <LineBreak/>
                                • Binary file detection
                            </TextBlock>
                        </StackPanel>
                    </ui:Card>
                </Grid>
            </ui:Card>
        </Grid>
    </Grid>
</UserControl>


<UserControl x:Class="DevGearbox.Components.JwtDebuggerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="JWT Debugger" Style="{StaticResource HeaderStyle}"/>
            <TextBlock Text="Decode and inspect JWT tokens - see header, payload, and signature" 
                       Foreground="#9CDCFE" FontSize="12"/>
        </StackPanel>

        <!-- Status Bar -->
        <Border Grid.Row="1" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" 
                CornerRadius="3" Padding="10,8" Margin="0,0,0,10">
            <TextBlock Name="StatusText" Text="Enter a JWT token to decode" 
                       Foreground="#9CDCFE" FontSize="12"/>
        </Border>

        <!-- Main Content: Two Column Layout -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Input -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E42" 
                    BorderThickness="1" CornerRadius="4" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Input Label -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="JWT Token Input" Foreground="#569CD6" 
                                   FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock Text=" (paste your JWT token here)" Foreground="#9CDCFE" 
                                   FontSize="11" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- Token Input -->
                    <TextBox Name="JwtTokenInput" Grid.Row="1"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             TextChanged="JwtTokenInput_TextChanged"
                             FontFamily="Consolas"
                             FontSize="12"
                             Background="#1E1E1E"
                             Foreground="White"
                             BorderBrush="#3E3E42"
                             Padding="8"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="🔍 Decode" Click="DecodeButton_Click" 
                                Margin="0,0,10,0" Padding="15,8"/>
                        <Button Content="🗑️ Clear" Click="ClearAll_Click" 
                                Padding="15,8" Background="#5A5A5A"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel: Output -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header Section -->
                    <Border Background="#252526" BorderBrush="#3E3E42" BorderThickness="1" 
                            CornerRadius="4" Padding="10" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="📋 Header" Foreground="#569CD6" 
                                           FontSize="14" FontWeight="SemiBold"/>
                                <Button Content="Copy" Click="CopyHeader_Click" 
                                        Margin="10,0,0,0" Padding="8,4" FontSize="11"
                                        Background="#0E639C" BorderThickness="0"/>
                            </StackPanel>

                            <TextBox Name="HeaderOutput" Grid.Row="1"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     MinHeight="100"
                                     MaxHeight="150"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Background="#1E1E1E"
                                     Foreground="#4EC9B0"
                                     BorderBrush="#3E3E42"
                                     Padding="8"/>
                        </Grid>
                    </Border>

                    <!-- Payload Section -->
                    <Border Background="#252526" BorderBrush="#3E3E42" BorderThickness="1" 
                            CornerRadius="4" Padding="10" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="📦 Payload" Foreground="#569CD6" 
                                           FontSize="14" FontWeight="SemiBold"/>
                                <Button Content="Copy" Click="CopyPayload_Click" 
                                        Margin="10,0,0,0" Padding="8,4" FontSize="11"
                                        Background="#0E639C" BorderThickness="0"/>
                            </StackPanel>

                            <TextBox Name="PayloadOutput" Grid.Row="1"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     MinHeight="200"
                                     MaxHeight="300"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Background="#1E1E1E"
                                     Foreground="#CE9178"
                                     BorderBrush="#3E3E42"
                                     Padding="8"/>
                        </Grid>
                    </Border>

                    <!-- Signature Section -->
                    <Border Background="#252526" BorderBrush="#3E3E42" BorderThickness="1" 
                            CornerRadius="4" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="🔐 Signature" Foreground="#569CD6" 
                                           FontSize="14" FontWeight="SemiBold"/>
                                <Button Content="Copy" Click="CopySignature_Click" 
                                        Margin="10,0,0,0" Padding="8,4" FontSize="11"
                                        Background="#0E639C" BorderThickness="0"/>
                            </StackPanel>

                            <TextBox Name="SignatureOutput" Grid.Row="1"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"
                                     MaxHeight="120"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Background="#1E1E1E"
                                     Foreground="#DCDCAA"
                                     BorderBrush="#3E3E42"
                                     Padding="8"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Footer Info -->
        <Border Grid.Row="3" Background="#2D2D30" BorderBrush="#3E3E42" 
                BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,10,0,0">
            <TextBlock Foreground="#9CDCFE" FontSize="11" TextWrapping="Wrap">
                <Run Text="💡 Tip: JWT tokens have 3 parts separated by dots (.)"/><LineBreak/>
                <Run Text="   • Header: Algorithm and token type"/><LineBreak/>
                <Run Text="   • Payload: Claims and data"/><LineBreak/>
                <Run Text="   • Signature: Verification signature"/>
            </TextBlock>
        </Border>
    </Grid>
</UserControl>


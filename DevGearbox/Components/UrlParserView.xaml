<UserControl x:Class="DevGearbox.Components.UrlParserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="URL Parser" Style="{StaticResource HeaderStyle}"/>
            <TextBlock Text="Parse URLs and extract all components and query parameters" 
                       Foreground="#9CDCFE" FontSize="12"/>
        </StackPanel>
        <Border Grid.Row="1" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" 
                CornerRadius="3" Padding="10,8" Margin="0,0,0,15">
            <TextBlock Name="StatusText" Text="Enter a URL to parse" 
                       Foreground="#9CDCFE" FontSize="12"/>
        </Border>
        <Border Grid.Row="2" Background="#252526" BorderBrush="#3E3E42" BorderThickness="1" 
                CornerRadius="4" Padding="10" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="URL Input" 
                           Foreground="#569CD6" FontSize="13" FontWeight="SemiBold" 
                           Margin="0,0,0,8"/>
                <TextBox Name="UrlInput" Grid.Row="1"
                         FontFamily="Consolas" FontSize="12"
                         Background="#1E1E1E" Foreground="White"
                         BorderBrush="#3E3E42" Padding="10"
                         TextChanged="UrlInput_TextChanged"
                         ToolTip="Enter URL"/>
            </Grid>
        </Border>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="Parse URL" Click="ParseButton_Click" 
                    Padding="20,10" FontSize="13" FontWeight="SemiBold" Margin="0,0,10,0"
                    Background="#0E639C"/>
            <Button Content="Clear All" Click="ClearAll_Click" 
                    Padding="15,10" FontSize="13" Background="#5A5A5A"/>
        </StackPanel>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E42" 
                    BorderThickness="1" CornerRadius="4" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Name="ComponentsPanel">
                        <TextBlock Text="URL Components" 
                                   Foreground="#569CD6" FontSize="14" FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>
                        <Border Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="1" 
                                CornerRadius="3" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Scheme" Foreground="#9CDCFE" FontSize="11" Margin="0,0,0,5"/>
                                <TextBox Name="SchemeText" IsReadOnly="True" 
                                         FontFamily="Consolas" FontSize="12"
                                         Background="#252526" Foreground="#4EC9B0"
                                         BorderThickness="0" Padding="5"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="1" 
                                CornerRadius="3" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Host" Foreground="#9CDCFE" FontSize="11" Margin="0,0,0,5"/>
                                <TextBox Name="HostText" IsReadOnly="True" 
                                         FontFamily="Consolas" FontSize="12"
                                         Background="#252526" Foreground="#4EC9B0"
                                         BorderThickness="0" Padding="5"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="1" 
                                CornerRadius="3" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Port" Foreground="#9CDCFE" FontSize="11" Margin="0,0,0,5"/>
                                <TextBox Name="PortText" IsReadOnly="True" 
                                         FontFamily="Consolas" FontSize="12"
                                         Background="#252526" Foreground="#4EC9B0"
                                         BorderThickness="0" Padding="5"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="1" 
                                CornerRadius="3" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Path" Foreground="#9CDCFE" FontSize="11" Margin="0,0,0,5"/>
                                <TextBox Name="PathText" IsReadOnly="True" 
                                         FontFamily="Consolas" FontSize="12"
                                         Background="#252526" Foreground="#4EC9B0"
                                         BorderThickness="0" Padding="5" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="1" 
                                CornerRadius="3" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Query String" Foreground="#9CDCFE" FontSize="11" Margin="0,0,0,5"/>
                                <TextBox Name="QueryText" IsReadOnly="True" 
                                         FontFamily="Consolas" FontSize="12"
                                         Background="#252526" Foreground="#4EC9B0"
                                         BorderThickness="0" Padding="5" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        <Border Name="FragmentBorder" Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="1" 
                                CornerRadius="3" Padding="10" Margin="0,0,0,10" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="Fragment" Foreground="#9CDCFE" FontSize="11" Margin="0,0,0,5"/>
                                <TextBox Name="FragmentText" IsReadOnly="True" 
                                         FontFamily="Consolas" FontSize="12"
                                         Background="#252526" Foreground="#4EC9B0"
                                         BorderThickness="0" Padding="5"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <Border Grid.Column="2" Background="#252526" BorderBrush="#3E3E42" 
                    BorderThickness="1" CornerRadius="4" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Query Parameters" 
                               Foreground="#569CD6" FontSize="14" FontWeight="SemiBold" 
                               Margin="0,0,0,15"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="ParametersPanel">
                            <TextBlock Name="NoParametersText" 
                                       Text="No query parameters" 
                                       Foreground="#9CDCFE" 
                                       FontSize="12" 
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        <Border Grid.Row="5" Background="#2D2D30" BorderBrush="#3E3E42" 
                BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,15,0,0">
            <TextBlock Foreground="#9CDCFE" FontSize="11" TextWrapping="Wrap">
                <Run Text="Example: https://example.com/search?q=hello&amp;page=2&amp;sort=date#results"/><LineBreak/>
                <Run Text="Tip: Each parameter has its own textbox with a copy button"/>
            </TextBlock>
        </Border>
    </Grid>
</UserControl>

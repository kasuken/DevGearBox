<UserControl x:Class="DevGearbox.Components.TextTransformerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ui:Card Padding="20" Margin="20">
            <StackPanel>
                <TextBlock Text="Text Transformer" Style="{StaticResource HeaderStyle}"/>
                <Label Content="Input Text:"/>
                <ui:TextBox Name="TextTransformInput" MinHeight="120" TextWrapping="Wrap" AcceptsReturn="True"/>
                <Label Content="Transformations:"/>
                <WrapPanel Margin="0,5">
                    <ui:Button Content="UPPER CASE" Click="TextUpperCase_Click" 
                               Icon="{ui:SymbolIcon TextCaseLowercase24}" Margin="0,0,5,5"/>
                    <ui:Button Content="lower case" Click="TextLowerCase_Click" 
                               Icon="{ui:SymbolIcon TextCaseLowercase24}" Margin="0,0,5,5"/>
                    <ui:Button Content="PascalCase" Click="TextPascalCase_Click" 
                               Icon="{ui:SymbolIcon TextCaseTitle24}" Margin="0,0,5,5"/>
                    <ui:Button Content="camelCase" Click="TextCamelCase_Click" 
                               Icon="{ui:SymbolIcon TextCaseTitle24}" Margin="0,0,5,5"/>
                    <ui:Button Content="snake_case" Click="TextSnakeCase_Click" 
                               Icon="{ui:SymbolIcon TextUnderline24}" Margin="0,0,5,5"/>
                    <ui:Button Content="kebab-case" Click="TextKebabCase_Click" 
                               Icon="{ui:SymbolIcon Subtract24}" Margin="0,0,5,5"/>
                    <ui:Button Content="Reverse" Click="TextReverse_Click" 
                               Icon="{ui:SymbolIcon ArrowSyncCheckmark24}" Margin="0,0,5,5"/>
                    <ui:Button Content="Remove Whitespace" Click="TextRemoveWhitespace_Click" 
                               Icon="{ui:SymbolIcon SpaceBar24}" Margin="0,0,5,5"/>
                    <ui:Button Content="URL Encode" Click="TextUrlEncode_Click" 
                               Icon="{ui:SymbolIcon LinkEdit24}" Margin="0,0,5,5"/>
                    <ui:Button Content="URL Decode" Click="TextUrlDecode_Click" 
                               Icon="{ui:SymbolIcon Link24}" Margin="0,0,5,5"/>
                </WrapPanel>
                <Label Content="Output:"/>
                <ui:TextBox Name="TextOutput" MinHeight="120" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>
        </ui:Card>
    </ScrollViewer>
</UserControl>
